@page "/categorias"
@inherits ListCategoryPage
@* pagina que contem a logica dos GET e DELETE *@

<MudText Typo="Typo.h3">Categorias</MudText>
@* ajusta para o botao ficar na esquerda *@
<div class="d-flex justify-end">
    @* botao de cirar categoria *@
    <MudButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        StartIcon="@Icons.Material.TwoTone.Add"
        Href="/categorias/adicionar">
        NOVA CATEGORIA
    </MudButton>
</div>

@* Tag para organizar uma listagem em tabela *@
<MudDataGrid
    Class="mt-4"
    Items="@Categories"
    Filterable="true"
    QuickFilter="Filter"
    Hideable="true">
    @* barra de filtro *@
    <ToolBarContent>
        <MudText Typo="Typo.h6">Categorias</MudText>
        <MudSpacer/>
        <MudTextField
            @bind-Value="SearchTerm"
            Placeholder="Filtrar..."
            Adornment="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search"
            Immediate="true"
            IconSize="Size.Medium"
            Class="mt-0"
            ></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Id" Title="ID"/>
        <PropertyColumn Property="x => x.Title" Title="Categoria"/>
        @* estrutura com botao de editar ou excluir em cada coluna *@
        <TemplateColumn Class="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudIconButton 
                        Icon="@Icons.Material.Filled.Edit"
                        Href="@($"/categorias/editar/{context.Item.Id}")"
                        Color="Color.Primary">
                    </MudIconButton>
                    <MudIconButton 
                        Icon="@Icons.Material.Filled.Delete"
                        Color="Color.Error"
                        aria-label="Excluir"
                        OnClick="() => OnDeleteButtonClickedAsync(context.Item.Id, context.Item.Title)">
                    </MudIconButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
