@*Componente Blazor que define a tela de acesso*@
@page "/login"
@layout HeadlessLayout
@inherits LoginPage

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center">
                <img src="imgs/logopremium.png" alt="Dima" width="200">
            </div>
            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                @* faz as validacoes automaticamente caso existam *@
                <DataAnnotationsValidator/>
                @* linha para ser preenchida *@
                <MudTextField
                    T="string"
                    Label="E-mail"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Email"
                    For="@(()=> InputModel.Email)"
                    @bind-Value="InputModel.Email"
                />

                <MudTextField
                    T="string"
                    Label="Senha"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Password"
                    For="@(()=> InputModel.Password)"
                    @bind-Value="InputModel.Password"
                />
                
                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        @* componente que exibe um círculo de progresso giratório. *@
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        @* ativará o processo de submissão do formulário *@
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Entrar</MudButton>
                        <MudSpacer/>
                        <MudButton Href="/comecar">Nova conta</MudButton>
                    }
                </div>
                
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>


