@*Componente Blazor que define o conteúdo da página raiz da aplicação*@
@page "/"
@inherits HomePage

<MudGrid Justify="Justify.Center">
    <MudItem lg="6" md="12" sm="12" xs="12">
        @*Tabela do Resumo Financeiro*@
        <MudCard Class="pa-8">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Resumo Financeiro</MudText>
                </CardHeaderContent>
                @* botao que define o modo oculto *@
                <CardHeaderActions>
                    <MudIconButton
                        Icon="@(ShowValues ? Icons.Material.TwoTone.VisibilityOff : Icons.Material.TwoTone.Visibility)"
                        OnClick="ToggleShowValues"/> @* submete como true ou false (ligar e desligar)*@
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <p>
                    <strong>SALDO</strong>
                </p>
                @if (Summary is null) @* caso seja nulo, vai ficar carregando infinitamente*@
                {
                    <div class="d-flex justify-center align-center" style="height: 350px">
                        <MudProgressCircular Indeterminate="true" Color="Color.Primary"/>
                    </div>
                }
                else
                {
                    @if (Summary.Total > 0) @* caso o valor total seja maior *@
                    {
                        <MudText Color="Color.Success" Typo="Typo.h3"> @* coloracao verde com opcao de esconder valor*@
                            @(ShowValues ? Summary.Total.ToString("C") : "R$ ********")
                        </MudText>
                    }
                    else
                    {
                        <MudText Color="Color.Error" Typo="Typo.h3"> @* coloracao vermelha com opcao de esconder valor*@
                            @(ShowValues ? Summary.Total.ToString("C") : "R$ ********")
                        </MudText>
                    }

                    <br/>
                    <p>
                        <strong>Entradas</strong>
                    </p>
                    <MudText Color="Color.Success">
                        @(ShowValues ? Summary.Incomes.ToString("C") : "R$ ********")
                    </MudText>

                    <br/>
                    <p>
                        <strong>Saídas</strong>
                    </p>
                    <MudText Color="Color.Error">
                        @(ShowValues ? Summary.Expenses.ToString("C") : "R$ ********")
                    </MudText>
                }
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem lg="6" md="12" sm="12" xs="12">
        <MudCard Class="pa-8">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Receitas e Despesas</MudText>
            </MudCardHeader>
            <MudCardContent>
                <IncomesAndExpensesChart/>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem lg="6" md="12" sm="12" xs="12">
        <MudCard Class="pa-8">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Entradas por Categoria</MudText>
            </MudCardHeader>
            <MudCardContent>
                <IncomesByCategoryChart/>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem lg="6" md="12" sm="12" xs="12">
        <MudCard Class="pa-8">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Despesas por Categoria</MudText>
            </MudCardHeader>
            <MudCardContent>
                <ExpensesByCategoryChart/>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>


