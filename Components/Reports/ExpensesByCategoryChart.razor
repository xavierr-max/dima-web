@inherits ExpensesByCategoryChartComponent

@if (Data.Count > 0) // caso possua algum conteudo 
{
    //gráfico 
    <MudChart
        ChartType="ChartType.Pie" 
        InputData="@Data.ToArray()" 
        InputLabels="@Labels.ToArray()" 
        Width="100%"
        Height="350px"/>
}
else
{
    <div class="d-flex align-center justify-center" style="height: 350px">
        <MudProgressCircular Indeterminate="true" Color="Color.Primary"/>
    </div>
}